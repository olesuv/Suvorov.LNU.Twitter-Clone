@page
@model Suvorov.LNU.TwitterClone.Web.Pages.LoginUserModel
@{
    ViewData["Title"] = "Sign In";
}

<style type="text/css">
    .error {
        color: red;
        font-size: 10px;
    }

    .form-group {
        margin-top: 20px;
    }
</style>

<br />
<h2 class="text-center CloneTwitterTitle">Sign In to Twitter Clone</h2>
<br />

<div class="container d-flex justify-content-center align-self-center">
    <form method="post">

        <div class="form-group row">
            <div class="col-12">
                <input asp-for="User.EmailAddress" type="email" class="form-control" placeholder="example@gmail.com" />
                <span asp-validation-for="User.EmailAddress" class="error"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12">
                <input asp-for="User.Password" type="password" class="form-control" placeholder="Password">
                <span asp-validation-for="User.Password" class="error"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12">
                <input type="submit" class="btn btn-block rounded-pill SubmitButton form-control" asp-page-handler="Submit" value="Login"/>
            </div>
        </div>

    </form>
</div>
