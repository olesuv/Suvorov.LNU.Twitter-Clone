@page
@model Suvorov.LNU.TwitterClone.Web.Pages.HomeModel
@{
    ViewData["Title"] = "Home";
}

<div id="OuterContainer">
    @inject IHttpContextAccessor HttpContextAccessor

    @if (HttpContextAccessor?.HttpContext?.Session.GetString("userEmailAddress") == null)
    {
        Response.Redirect("RegisterUser");
    }
    else
    {
    <div class="container">
        <div class="row">
            <div class="col-md-3 d-none d-sm-block" style="position: relative;">
                @await Html.PartialAsync("_HomeLeftNavbarPartial", Model)
            </div>

            <div class="col-md-6 col-sm-12" style="height: 100vh;">
                @await Html.PartialAsync("_HomePostFormPartial", Model)
                @await Html.PartialAsync("_HomePostsPartial", Model)
            </div>

            <div class="col-md-3 d-none d-sm-block">    
                <div class="form-group row">
                    <div class="col-12">
                        @await Html.PartialAsync("_HomeTagsRatingPartial", Model)
                        @await Html.PartialAsync("_HomePeopleRecommendationsPartial", Model)
                    </div>
                </div>
            </div>
        </div>

        <footer class="footer-xs-only">
            Test footer
        </footer>
    </div>
    }
</div>
