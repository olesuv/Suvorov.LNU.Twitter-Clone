<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Suvorov.LNU.TwitterClone.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Suvorov.LNU.TwitterClone.Web.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" type="image/x-icon" href="~/logo-icon.ico" />
</head>
<body>
    <header>
        <div id="OuterContainer">
            @inject IHttpContextAccessor HttpContextAccessor
            @if (HttpContextAccessor.HttpContext.Session.GetString("userEmailAddress") == null)
            {
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                    <div class="container">
                        <img src="~/logo-icon.png" class="logo-img" />
                        <a class="navbar-brand" asp-area="" asp-page="/Index">Twitter Clone</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Home">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" href="/swagger">Swagger UI</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/RegisterUser">Sign up</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/LoginUser">Sign In</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/About">About</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            }
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (ViewContext.RouteData.Values["page"]?.ToString() == "/Index" && HttpContextAccessor.HttpContext.Session.GetString("userEmailAddress") == null)
    {
        <footer class="footer text-muted" style="width: 100%;">
            <div class="container-fluid no-padding">
                <div class="row">
                    <div class="col-md-3 UnsignedFooter"></div>
                    <div class="col-md-6 UnsignedFooter" style="padding-top: 0.5%;">
                        <h4 style="font-weight: 600;">Stay up to date with what's happening</h4>
                        <h6>Twitter Clone users are the first to know.</h6>
                    </div>
                    <div class="col-md-3 UnsignedFooter">
                        <div class="container-fluid no-padding" style="text-align: center;">
                            <div class="row">
                                <div class="col-md-6">
                                    <a href="/LoginUser">
                                        <input type="submit" class="btn btn-block rounded-pill FooterSignInButton form-control" asp-page-handler="Submit" value="Sign In" />
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <a href="/RegisterUser">
                                        <input type="submit" class="btn btn-block rounded-pill FooterSignUpButton form-control" asp-page-handler="Submit" value="Sign Up" />
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>